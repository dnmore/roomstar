<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('includes/head') %>
    <link rel="stylesheet" href="/styles/hotels.css" />
  </head>
  <body>
    <%- include('includes/header') %>

    <main>
      <section>
        <div class="hotel__detail">
          <h3><%= hotel.name %></h3>
          <p>Rating: <%= hotel.rating %></p>

          <p><%= hotel.address %></p>
          <p><%= hotel.title %></p>
          <p class="description"><%= hotel.description %></p>

          <button>
            <a href="<%= hotel.website %>">Visit Website</a>
          </button>
        </div>
      </section>
    </main>
  </body>
</html>
